//- src/views/mixins/mixins.pug

mixin list(id, ...items)
  ul(id=id)
    each item in items
      li= item

mixin navLink(link, name, last)
  li
    if(last)
      a(href=link).nav-link.last-link=name
    else
      a(href=link).nav-link=name

// Radio button
mixin radio(args) 
    .radio(id=attributes.id ? attributes.id : null, class=attributes.class ? attributes.class : null): label
      input(
        type='radio'
        name=args.name
        value=args.value
        checked=args.checked
        disabled=args.disabled)
      != args.radiolabel

//- Text field
mixin field(args)
  input.form-control(
    type=args.type ? args.type : 'text'
    name=args.name ? args.name : null
    value=args.value ? args.value : null
    placeholder=args.placeholder ? args.placeholder : null
    class=attributes.class
    id=attributes.id ? attributes.id : null
  )
  
// - Button
mixin button(args)
    button.btn(
      type=args.type ? args.type : 'button'
      class=attributes.class ? attributes.class : 'btn-default')= args.buttonlabel

